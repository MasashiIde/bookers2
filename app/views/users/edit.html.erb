<div class= "container">
  <div class= "row">
    <div class= "p-2 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <h3>
          <% if @user.errors.count==1 %>
            <%= @user.errors.count %>error prohibited this obj from being saved:
          <% else %>
            <%= @user.errors.count %>errors prohibited this obj from being saved:
          <% end %>
        </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <label for= "inputName" class= "mt-3">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName" %><br>

        <label for= "inputImage" class= "mt-3">Image</label><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像",accept: "image/*" %><br>

        <label for= "inputIntroduction" class= "mt-3">Introduction</label><br>
        <%= f.text_area :introduction %><br>

        <button class="btn btn-secondary mt-3" type="submit">Update User</button>
      <% end %>
    </div>
  </div>
</div>
