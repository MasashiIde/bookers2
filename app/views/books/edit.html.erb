<div class= "container">
  <div class= "row">
    <div class= "p-2 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <p class= "mt-3">Title</p>
        <%= f.text_field :title %>
        <p class= "mt-3">Opinion</p>
        <%= f.text_area :body %><br>
        <button class= "btn btn-success mt-3" type= "submit">
          Update Book
        </button>
      <% end %>
      <%= link_to 'show', book_path(@book) %>
      |
      <%= link_to 'back', books_path %>
    </div>
  </div>
</div>