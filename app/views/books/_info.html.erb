<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class= "table">
  <tbody>
    <tr>
      <th scope= "row">name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th scope= "row">intoduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>

<%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block my-3" do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>

